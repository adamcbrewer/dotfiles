[user]
	name = Adam Brewer
	email = adamcbrewer@gmail.com

[alias]
	ci  = commit -a
	cm  = commit -am
	st  = status
	s   = status -sb
	df  = diff --color --color-words --abbrev
	lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	b   = branch
	co  = checkout
	all = add .
	up  = pull
	# removes deleted files
	chop = status | grep deleted | awk '{print $3}' | xargs git rm
	# un-track any file that was added before ignoring
	untrack = rm --cached


[color]
	ui = always

[apply]
	whitespace = fix

[core]
	excludesfile = ~/.gitignore
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
